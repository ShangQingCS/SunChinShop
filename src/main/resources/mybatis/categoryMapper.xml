<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sqhl.shop.mapper.categoryMapper">
  <resultMap id="BaseResultMap" type="cn.sqhl.shop.vo.category">
    <id column="ID" jdbcType="VARCHAR" property="id" />
    <result column="CATE_NAME" jdbcType="VARCHAR" property="cateName" />
    <result column="MEMO" jdbcType="VARCHAR" property="memo" />
    <result column="CATE_ORDER" jdbcType="CHAR" property="cateOrder" />
    <result column="LEVELS" jdbcType="CHAR" property="levels" />
    <result column="LOGO" jdbcType="VARCHAR" property="logo" />
    <result column="URL" jdbcType="VARCHAR" property="url" />
    <result column="PARENT_ID" jdbcType="VARCHAR" property="parentId" />
    <result column="CATE_CODE" jdbcType="VARCHAR" property="cateCode" />
    <result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime" />
    <result column="UPDATE_TIME" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="ISBRAND" jdbcType="CHAR" property="isbrand" />
  </resultMap>
  <sql id="Base_Column_List">
    ID, CATE_NAME, MEMO, CATE_ORDER, LEVELS, LOGO, URL, PARENT_ID, CATE_CODE, 
    CREATE_TIME, UPDATE_TIME, ISBRAND
  </sql>
  <select id="queryList" parameterType="java.lang.String" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from SC_CATEGORY
    where isuse='1' and flag='1'
    <if test="map.parent_id != null" >
    	and PARENT_ID=#{map.parent_id,jdbcType=VARCHAR}
    </if>
    <if test="map.level != null" >
    	and PARENT_ID=#{map.level,jdbcType=VARCHAR}
    </if>
    order by CATE_ORDER desc
  </select>
</mapper>